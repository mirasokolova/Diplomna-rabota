<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FashionAllTheWay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <img class="logo" src="~/Picture/Yoyo Fashion Logo.png" alt="Logo">
            <style>
                .logo {
                    width: 150px;
                    height: fit-content;
                }
            </style>
            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FashionAllTheWay</a>*@
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">All Products</a>
                        </li>
                        @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Client")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Order" asp-action="MyOrders">My orders</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item active">
                            <div class="dropdown show">
                                <a class="nav-link active dropdown-toggle" href="#"
                                   id="dropdownMenuLink"
                                   data-toggle="dropdown"
                                   aria-haspopup="true"
                                   aria-expanded="false">
                                    Category
                                </a> 
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="/Product?searchStringCategoryName=Accessories&searchStringBrandName=">Accessories</a>
                                    <a class="dropdown-item" href="/Product?searchStringCategoryName=Bags&searchStringBrandName=">Bags</a>
                                    <a class="dropdown-item" href="/Product?searchStringCategoryName=Clothes+for+women&searchStringBrandName=">Clothes for women</a>
                                    <a class="dropdown-item" href="//Product?searchStringCategoryName=Clothes+for+men&searchStringBrandName=">Clothes for men</a>
                                    <a class="dropdown-item" href="/Product?searchStringCategoryName=Shoes+for+women&searchStringBrandName=">Shoes for women</a>
                                    <a class="dropdown-item" href="/Product?searchStringCategoryName=Shoes+for+women&searchStringBrandName=">Shoes for men</a>
                                </div>
                                </div>
                            </li>

                              @if ((this.User.Identity.IsAuthenticated) && (this.User.IsInRole("Administrator")))
                               {
                                 <li class="nav-item active">
                                <div class="dropdown show">
                                    <a class="nav-link active dropdown-toggle" href="#"
                                       id="dropdownMenuLink"
                                       data-toggle="dropdown"
                                       aria-haspopup="true"
                                       aria-expanded="false">
                                        Statistic Modul
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                        <a class="dropdown-item" asp-controller="Client" asp-action="Index">Clients</a>
                                        <a class="dropdown-item" asp-controller="Order" asp-action="Index">Orders</a>
                                        <a class="dropdown-item" asp-controller="Statistics" asp-action="Index">Statistics</a>
                                        
                                    </div>
                                </div>
                            </li>

                        }
                            </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <style>nav.</style>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - FashionAllTheWay - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
